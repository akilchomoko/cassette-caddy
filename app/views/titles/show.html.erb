<div class="min-height">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 offset-sm-2">
        <div id="titles mt-3">
          <div class="poster">
            <%= image_tag @title_poster["poster"], alt: "Movie Poster To Come!", size: "250x400" %>
          </div>
          <div class="detail">
            <h4>File Title: <%= @title.title %> </h4>
            <p>Film Description : <%= @title.description %></p>
            <p>Directors : <%= @title_details["directors"][0..3].join(", ") unless @title_details["directors"].nil? %></p>
            <p>Stars : <%= @title_details["stars"][0..3].join(", ") unless @title_details["stars"].nil? %></p>
            <p>Release Year : <%= @title.release_year %></p>
            <p>IMDB Rating : <%= @title_details["imdb_rating"] %></p>
            <p>Language : <%= @title_details["language"][0] %></p>
            <p>Popularity : <%= @title_details["popularity"][0] %></p>
            <p>Rental Rate : Â£<%= @title.rate_per_day.to_f / 100 %> per day</p>
            <p>Rated : <%= @title_details["rated"] %></p>
            <p>Format : VHS</p>
            <a href="https://www.imdb.com/title/<%= @title.imdb_id %>/">
              <span style=" font-size: 32px; color: Dodgerblue;">
              <i class="fab fa-imdb"></i>
              </span>
            </a>
            <hr>
          <% if @rental.start_date %>
              <p>Rented to you on <%= @rental.start_date %> and due back when you are done!</p>
            <% else %>
              <%= simple_form_for [@title, @rental] do | f | %>
              <%= f.submit "Rent now"%>
                <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
